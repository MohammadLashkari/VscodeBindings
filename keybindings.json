[
    //! code runner
    {
        "key": "shift+space",
        "command": "code-runner.run"
    },
    {
        "key": "ctrl+alt+n",
        "command": "-code-runner.run"
    },
    //! Vim Setup
    // QickFix 
    {
        "key": "shift+j",
        "command": "quickfixed.showQuickActions",
        "when": "vim.mode == 'Normal' && editorTextFocus"
    },
    // Select from the autosuggest menu
    {
        "key": "ctrl+j",
        "command": "selectNextSuggestion",
        "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible"
    },
    {
        "key": "ctrl+k",
        "command": "selectPrevSuggestion",
        "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.quickOpenSelectNext",
        "when": "inQuickOpen"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.quickOpenSelectPrevious",
        "when": "inQuickOpen"
    },
    // Select form quick fix menu (Ctrl + .)
    {
        "key": "ctrl+k",
        "command": "selectPrevCodeAction",
        "when": "codeActionMenuVisible"
    },
    {
        "key": "ctrl+j",
        "command": "selectNextCodeAction",
        "when": "codeActionMenuVisible"
    },
    // Moving around
    {
        "key": "ctrl+h",
        "command": "workbench.action.focusLeftGroup",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.focusRightGroup",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.focusAboveGroup",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.focusBelowGroup",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.navigateLeft"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.navigateRight"
    },
    // PageDown/Up when hover is open
    {
        "key": "h",
        "command": "editor.action.scrollLeftHover",
        "when": "editorHoverFocused"
    },
    {
        "key": "j",
        "command": "editor.action.scrollDownHover",
        "when": "editorHoverFocused"
    },
    {
        "key": "k",
        "command": "editor.action.scrollUpHover",
        "when": "editorHoverFocused"
    },
    {
        "key": "l",
        "command": "editor.action.scrollRightHover",
        "when": "editorHoverFocused"
    },
    // Ensure that tab button works in vim.
    {
        "key": "tab",
        "command": "tab",
        "when": "editorTextFocus && !editorTabMovesFocus"
    },
    {
        "key": "shift+tab",
        "command": "outdent",
        "when": "editorTextFocus && !editorTabMovesFocus"
    },
    // Navigate between open file tabs
    {
        "key": "alt+l",
        "command": "workbench.action.nextEditor"
    },
    {
        "key": "alt+h",
        "command": "workbench.action.previousEditor"
    },
    // Navigate between panels
    {
        "key": "alt+l",
        "command": "workbench.action.nextPanelView",
        "when": "panelFocus"
    },
    {
        "key": "alt+h",
        "command": "workbench.action.previousPanelView",
        "when": "panelFocus"
    },
    // Move active editor left or right
    {
        "key": "ctrl+alt+h",
        "command": "moveActiveEditor",
        "args": { "to": "left" }
    },
    {
        "key": "ctrl+alt+l",
        "command": "moveActiveEditor",
        "args": { "to": "right" }
    },
    // Search editor
    {
        "key": "ctrl+j",
        "command": "search.focus.nextInputBox",
        "when": "inSearchEditor && inputBoxFocus || inputBoxFocus && searchViewletVisible"
    },
    // Terminal commands.  
    {
        "key": "ctrl+n",
        "command": "workbench.action.terminal.newInActiveWorkspace",
        "when": "terminalFocus && terminalProcessSupported"
    },
    {
        "key": "ctrl+enter",
        "command": "workbench.action.toggleMaximizedPanel",
        "when": "panelFocus"
    },
    {
        "key": "ctrl+;",
        "command": "workbench.action.terminal.toggleTerminal"
    },
    {
        "key": "ctrl+'",
        "command": "workbench.debug.action.toggleRepl"
    },
    {
        "key": "ctrl+s",
        "command": "workbench.action.terminal.split",
        "when": "terminalFocus && terminalProcessSupported"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.terminal.focusNextPane",
        "when": "terminalFocus && terminalProcessSupported"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.terminal.focusPreviousPane",
        "when": "terminalFocus && terminalProcessSupported"
    },
    {
        "key": "ctrl+d",
        "command": "workbench.action.terminal.kill",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+j",
        "command": "-workbench.action.togglePanel"
    },
    {
        "key": "shift+k",
        "command": "workbench.action.terminal.scrollUpPage",
        "when": "terminalFocus"
    },
    {
        "key": "shift+j",
        "command": "workbench.action.terminal.scrollDownPage",
        "when": "terminalFocus"
    },
    // Create new file or folder in expelor
    {
        "key": "n",
        "command": "explorer.newFile",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "r",
        "command": "renameFile",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "d",
        "command": "deleteFile",
        "when": "filesExplorerFocus && !inputFocus"
    },
    // Change size of open tabs
    {
        "key": "ctrl+left",
        "command": "workbench.action.terminal.resizePaneLeft",
        "when": "panelFocus"
    },
    {
        "key": "ctrl+right",
        "command": "workbench.action.terminal.resizePaneRight",
        "when": "panelFocus"
    },
    {
        "key": "ctrl+up",
        "command": "workbench.action.terminal.resizePaneUp",
        "when": "panelFocus"
    },
    {
        "key": "ctrl+down",
        "command": "workbench.action.terminal.resizePaneDown",
        "when": "panelFocus"
    },
    {
        "key": "ctrl+right",
        "command": "workbench.action.increaseViewWidth",
        "when": "vim.mode == 'Normal' && editorTextFocus"
    },
    {
        "key": "ctrl+left",
        "command": "workbench.action.decreaseViewWidth",
        "when": "vim.mode == 'Normal' && editorTextFocus"
    },
    {
        "key": "ctrl+up",
        "command": "workbench.action.increaseViewHeight",
        "when": "vim.mode == 'Normal' && editorTextFocus"
    },
    {
        "key": "ctrl+down",
        "command": "workbench.action.decreaseViewHeight",
        "when": "vim.mode == 'Normal' && editorTextFocus"
    }
]